@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EntityLayer.Concrete.Product

<form method="post" asp-controller="Product" asp-action="UpdateProduct">
    <div class="container p-3">

        <h2 class="text-primary">
            Update Product
        </h2>


        <div class="row pt-4">
            <input type="hidden" asp-for="CategoryID"/>
            <div class="mb-3">
                <label asp-for="ProductName" style="padding-bottom: 5px">ProductName</label>
                <input asp-for="ProductName"  class="form-control" required />
                <span asp-validation-for="ProductName" class="text-warning"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuantityPerUnit" style="padding-bottom: 5px">QuantityPerUnit</label>
                    <input asp-for="QuantityPerUnit"  class="form-control" required />
                    <span asp-validation-for="QuantityPerUnit" class="text-warning"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitPrice" style="padding-bottom: 5px">UnitPrice</label>
                    <input asp-for="UnitPrice"  class="form-control" required />
                    <span asp-validation-for="UnitPrice" class="text-warning"></span>

                </div> 

                <div class="mb-3">
                    <label asp-for="UnitsInStock" style="padding-bottom: 5px">UnitsInStock</label>
                    <input asp-for="UnitsInStock"  class="form-control" required />
                    <span asp-validation-for="UnitsInStock" class="text-warning"></span>
                </div> 
                
                  <div class="mb-3">
                    <label asp-for="UnitsOnOrder" style="padding-bottom: 5px">UnitsOnOrder</label>
                    <input asp-for="UnitsOnOrder"  class="form-control" required />
                    <span asp-validation-for="UnitsOnOrder" class="text-warning"></span>
               
           
                </div>
           
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button asp-route-ProductID="@Model.ProductID" type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to solutions</a>
            </div>
        </div>
    </div>


</form>